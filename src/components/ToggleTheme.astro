---
import MoonStarsIcon from "./icons/MoonStars.astro";
import SunsetIcon from "./icons/Sunset.astro";
---

<div class="">
  <button
    id="sun"
    class={`
      cursor-pointer 
      text-amber-300 
      transition-transform duration-300 
      transform scale-0 opacity-0 
      translate-x-6
      dark:scale-100 dark:opacity-100
    `}
  >
    <SunsetIcon class="size-5" />
  </button>
  <button
    id="moon"
    class={`
      cursor-pointer 
      text-blue-400
      transition-transform duration-300 
      transform 
      dark:scale-0 dark:opacity-0
    `}
  >
    <MoonStarsIcon class="size-5" />
  </button>
</div>

<script>
  const localTheme = document.documentElement.dataset;
  document.getElementById("moon")?.addEventListener("click", () => {
    localTheme.theme = "dark";
  });

  document.getElementById("sun")?.addEventListener("click", () => {
    localTheme.theme = "light";
  });
</script>
